// @flow

import { Platform, StyleSheet } from 'react-native';

import { capitalize } from '../../common/utils';
import type { themeType } from '../../ThemeProvider/defaultTheme';
import type { Type } from '../Button.types';

/* @TODO
                                              * rewrite to object inline-styles
                                              */

const platformSpecificStyles = Platform.select({
  web: {
    cursor: 'pointer' } });



export function generateButtonTypesStyles(type: Type, theme: themeType) {
  const cType = capitalize(type);
  return {
    [`type_${type}`]: {
      backgroundColor: theme.orbit[`backgroundButton${cType}`] },


    [`type_${type}-text`]: {
      color: theme.orbit[`colorTextButton${cType}`] },


    [`hovered_${type}-true`]: {
      backgroundColor: theme.orbit[`backgroundButton${cType}Hover`],
      ...platformSpecificStyles },


    [`type_${type}-bordered`]: {
      backgroundColor: theme.orbit.backgroundButtonBordered,
      borderStyle: 'solid',
      borderWidth: StyleSheet.hairlineWidth,
      borderColor: `${theme.orbit[`borderColorButton${cType}Bordered`]}` },


    [`type_${type}-text-bordered`]: {
      color: theme.orbit[`colorTextButton${cType}Bordered`] },


    [`hovered_${type}-bordered-true`]: {
      backgroundColor: theme.orbit.backgroundButtonBorderedHover,
      ...platformSpecificStyles } };


}