// @flow

import * as React from 'react';
import { StyleSheet } from 'react-native';

import { type ClickableProps } from './Clickable.types';
import { useStyles } from '../styles';

const Clickable = ({
  children,
  href,
  target,
  onClick,
  role,
  rel,
  onKeyPress,
  tabIndex }
: ClickableProps) => {
  return (
    <a
    href={href}
    onClick={onClick}
    target={target}
    onKeyDown={onKeyPress}
    style={StyleSheet.flatten(useStyles({ clickableCursor: true }))}
    role={role}
    rel={rel}
    tabIndex={tabIndex}>

      {children}
    </a>);

};

export { Clickable };