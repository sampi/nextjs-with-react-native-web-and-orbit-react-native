// @flow

import type { themeType } from '../ThemeProvider/defaultTheme';
import type { styleSheetType } from '../styles/styleTypes';

export default function generateCountryFlagStyles(theme: themeType): styleSheetType {
  return {
    base_container: {
      position: 'relative',
      backgroundColor: theme.orbit.backgroundCountryFlag,
      borderRadius: parseFloat(theme.orbit.borderRadiusSmall),
      overflow: 'hidden',
      height: 13, // TODO: change token heightCountryFlag
      width: parseFloat(theme.orbit.widthCountryFlag) },

    base_image: {
      height: '100%',
      width: '100%' },

    base_shadow: {
      position: 'absolute',
      height: '100%',
      width: '100%',
      top: 0,
      right: 0,
      bottom: 0,
      left: 0,
      // TODO: create token borderColorCountryFlag
      // TODO: create token borderWidthCountryFlag
      borderColor: `${theme.orbit.paletteInkNormal}10`,
      borderWidth: 1,
      borderRadius: parseFloat(theme.orbit.borderRadiusSmall) } };


}