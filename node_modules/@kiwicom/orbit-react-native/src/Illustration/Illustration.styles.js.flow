// @flow

import type { themeType } from '../ThemeProvider/defaultTheme';
import type { styleSheetType } from '../styles/styleTypes';

export default function generateIllustrationStyles(theme: themeType): styleSheetType {
  return {
    base_illustration: {
      backgroundColor: theme.orbit.backgroundIllustration,
      maxWidth: '100%',
      marginVertical: 'auto',
      marginHorizontal: 0,
      resizeMode: 'contain' },

    size_small: {
      maxHeight: parseFloat(theme.orbit.heightIllustrationSmall) },

    size_medium: {
      maxHeight: parseFloat(theme.orbit.heightIllustrationMedium) } };


}