// @flow

import { Platform } from 'react-native';

import { getTextSize } from '../common/styles/helpers';
import type { sizeType } from '../styles';
import type { themeType } from '../ThemeProvider/defaultTheme';

export function getTextStyles({
  theme,
  isHovered,
  size }
: {|
  +theme: themeType,
  +isHovered: boolean,
  +size?: sizeType, |})
{
  return {
    fontFamily: theme.fontFamily[theme.orbit.fontWeightLinks],
    alignItems: 'center',
    textDecorationLine: isHovered ? 'none' : 'underline',
    ...(size ? { fontSize: getTextSize(size, theme) } : {}),
    ...Platform.select({
      web: {
        cursor: 'pointer' } }) };



}

export function getColor({
  theme,
  type,
  isHovered = false }
: {|
  +theme: themeType,
  +type: 'primary' | 'secondary',
  +isHovered?: boolean, |})
{
  const tokens = {
    primary: theme.orbit[`colorTextLinkPrimary${isHovered ? 'Hover' : ''}`],
    secondary: theme.orbit[`colorTextLinkSecondary${isHovered ? 'Hover' : ''}`] };

  return tokens[type];
}