// @flow

import { useState } from 'react';

import { isHoverEnabled } from './hoverState';

export function useHover(value: boolean = false) {
  const [hover, setHover] = useState({
    isHovered: value,
    showHover: true });


  const onMouseEnter = () => {
    if (isHoverEnabled() && !hover.isHovered) {
      setHover({
        ...hover,
        isHovered: true });

    }
  };

  const onMouseLeave = () => {
    if (hover.isHovered) {
      setHover({
        ...hover,
        isHovered: false });

    }
  };

  return {
    isHovered: hover.isHovered,
    actions: {
      onMouseEnter,
      onMouseLeave } };


}