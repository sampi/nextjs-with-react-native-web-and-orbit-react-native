// @flow

import { select } from '@storybook/addon-knobs';
import { icons } from '@kiwicom/orbit-react-native';

import type { iconUCType } from '../Icon/icons.types.generated';

export const spaceAfters = [
null,
'none',
'smallest',
'small',
'normal',
'medium',
'large',
'largest'];


export function getIcons(name: string, defaultIcon: iconUCType) {
  return select(name, [null, ...Object.keys(icons)], defaultIcon);
}

// select icon form orbit-react-native's icons (not pure-function)
export function selectIcon(label: string = 'icon', defaultIcon: iconUCType = 'ChevronRight') {
  const icon = getIcons(label, defaultIcon);
  return icons[icon];
}

export function validate(rel?: string) {
  return rel !== undefined && rel !== '' ? rel : undefined;
}