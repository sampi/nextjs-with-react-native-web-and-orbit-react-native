// @flow

import type { themeType } from '../../ThemeProvider/defaultTheme';
import type { sizeType } from '../../styles';

export function getTextSize(size: sizeType, theme: themeType) {
  const tokens = {
    small: parseFloat(theme.orbit.fontSizeTextSmall),
    normal: parseFloat(theme.orbit.fontSizeTextNormal),
    large: parseFloat(theme.orbit.fontSizeTextLarge) };

  return parseFloat(tokens[size]);
}