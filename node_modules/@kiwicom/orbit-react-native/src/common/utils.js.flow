// @flow strict

module.exports = {
  ucCase: function ucCase(dashCase: string) {
    return (
      dashCase[0].toUpperCase() +
      dashCase.
      substring(1).
      toLowerCase()
      // eslint-disable-next-line prefer-named-capture-group
      .replace(/-([a-z])/g, function (g) {
        return g[1].toUpperCase();
      }));

  },
  capitalize: function capitalize(s: string) {
    if (typeof s !== 'string') {
      console.warn(
      `An invalid parameter was passed to the capitalize function, the string was expected but the ${typeof s} was received.`);

      return '';
    }
    return s.charAt(0).toUpperCase() + s.slice(1);
  } };